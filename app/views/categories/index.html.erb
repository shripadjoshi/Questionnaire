<h1>Listing Categories</h1>

<table id="categories" class="display" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>Name</th>
      <th></th>      
    </tr>
  </tfoot>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
            <%= link_to 'Edit', edit_category_path(category), class: "btn btn-primary" %>
            <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>
<%#= will_paginate @categories %>
<br/>

<%= link_to 'New Category', new_category_path, class: 'btn-link' %>
<script>
  $(document).ready(function() {
    $('#categories').DataTable();
  });
  
</script>